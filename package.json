{
  "name": "siop-tools-web",
  "version": "1.0.0",
  "description": "Web based utilities to enable working with SIOP",
  "main": "src/server/server.js",
  "scripts": {
    "build:c": "webpack --mode production --config webpack.prod.js",
    "build:s": "tsc -p tsconfig.json",
    "build": "run-p build:c build:s",
    "start": "node build/server/server.js",
    "dev:build:c": "webpack --mode development --config webpack.dev.js",
    "dev:build": "run-p dev:build:c build:s",
    "dev:start:w": "webpack --watch --mode development --config webpack.dev.js",
    "dev:start": "run-p start dev:start:w"
  },
  "keywords": [
    "SIOP",
    "IDENTITY"
  ],
  "author": "Chim Himidumage",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^14.0.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "node-sass": "^4.14.1",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "@types/copy-webpack-plugin": "^5.0.1",
    "axios": "^0.19.2",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.0",
    "css-loader": "^3.5.3",
    "did-resolver": "^2.1.0",
    "did-siop": "^1.1.0",
    "ethr-did": "^1.1.0",
    "ethr-did-resolver": "^2.3.3",
    "path": "^0.12.7",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "ts-loader": "^7.0.4",
    "web3": "^1.2.7",
    "webpack": "^4.43.0",
    "webpack-merge": "^4.2.2"
  }
}
